#!/usr/bin/perl -w

open(INPUT, "<", $ARGV[0]) or die "Falha ao abrir o arquivo!\n";
$linha = <INPUT>;
close(INPUT);
@valores = split(" ",$linha);

$clausulas = 11916;
for (my $i = 0; $i < 81; $i++) 
{
  if($valores[$i] != 0){$clausulas++;}
}

print"p cnf 729 $clausulas\n";

our $cont = 1;

#criando matriz com numeros de 1 a 729
for (my $i = 0; $i < 9; $i++) 
{
  for(my $j = 0; $j< 9; $j++)
  {
    for(my $k = 0; $k < 9; $k++)
    {
      $matriz[$i][$j][$k] = $cont++; 
    }
  }
}

for (my $i = 0; $i < 81; $i++) 
{
  if($valores[$i] != 0)
  {
    $l = $i/9;
    $k = $i%9;
    print "$matriz[$l][$k][$valores[$i]-1] 0\n";
  }
  
}

#OU's dos vetores pendurados ISSO É UM FATOOOOOOOOOOOOOOOOOOOOO!! uma casa tem de ter algum valor
for (my $i = 0; $i < 9; $i++) 
{
  for(my $j = 0; $j< 9; $j++)
  {
    for(my $k = 0; $k < 9; $k++)
    {
      print "$matriz[$i][$j][$k] ";
    }
    print "0\n";
  }
}
#print"2 a 2 elementos dos vetores pendurados\n\n\n\n\n";
#2 a 2 elementos dos vetores pendurados ISSO É UM FATOOOOOOOOO!! e apenas só um valor

for(my $i = 0; $i < 9; $i++) 
{
  for(my $j = 0; $j< 9; $j++)
  {
    for(my $k = 0; $k < 9; $k++)
    {
      for(my $l = $k+1; $l < 9; $l++)
      {
        print "-$matriz[$i][$j][$k] -$matriz[$i][$j][$l] 0\n";
      }
    }
  }
}
#print"OU de linhas\n\n\n\n\n";
#varia colunas primeiro, depois valores e por ultimo linhas(fazendo os OUs aqui)(111 ou 121 ... 191 112 ... 192)#parece certo
for (my $i = 0; $i < 9; $i++) 
{
  for(my $k = 0; $k< 9; $k++)
  {
    for(my $j = 0; $j < 9; $j++)
    {
      print "$matriz[$i][$j][$k] ";
    }
    print "0\n";
  }
  #print "0\n";
}

#print"2 a 2 elementos das linhas\n\n\n\n\n";
#2 a 2 elementos linhas#################################será?###parece certo
for (my $i = 0; $i < 9; $i++) 
{
  for(my $k = 0; $k< 9; $k++)
  {
    for(my $j = 0; $j < 9; $j++)
    {
      for(my $l = $j+1; $l < 9; $l++)
      {
        print "-$matriz[$i][$j][$k] -$matriz[$i][$l][$k] 0\n";
      }
    }
  }
}
#print"OU de colunas\n\n\n\n\n";
#varia linhas primeiro, depois valores e por ultimo colunas(fazendo os OUs aqui)(111 ou 211 ou ... ou 911 ... 112 ... 912)parece certooooooo
for (my $j = 0; $j < 9; $j++) 
{
  for(my $k = 0; $k< 9; $k++)
  {
    for(my $i = 0; $i < 9; $i++)
    {
      print "$matriz[$i][$j][$k] ";
    }
    print "0\n";
  }
  #print "\n";
}
#print"2 a 2 elementos das colunas\n\n\n\n\n";
#2 a 2 elementos coluna#################################será?parece certo
for (my $j = 0; $j < 9; $j++) 
{
  for(my $k = 0; $k< 9; $k++)
  {
    for(my $i = 0; $i < 9; $i++)
    {
      for(my $l = $i+1; $l < 9; $l++)
      {
        print "-$matriz[$i][$j][$k] -$matriz[$l][$j][$k] 0\n";
      }
    }
  }
}

#OU mini gridSERAAAAAAAAAAAA????????????
my $i = 0;
my $j = 0;

for(my $m = 0; $m < 9; $m++)
{
  for(my $l = $i; $l < $i+3; $l++)
  {
    for(my $k = $j; $k < $j+3; $k++)
    {
      print "$matriz[$l][$k][$m] ";
    }
  }
  print "0\n";
  $j += 3;
  if($j > 8){$i += 3; $j = 0;}
  if($i > 8){last;}
}


$i = 0;            #percorrera as casas
$j = 0;            #estrela do show
$l = 1;            #índice da linha central do grid
$k = 1;            #indice da coluna central do grid
$m = 0;            #valor do campo
my $linp;          #indice da linha percorrida
my $colp;          #indice da coluna percorrida
my $line;          #indice da linha estrela do show
my $cole;          #indice da coluna estrela do show


for($m = 0; $m < 9; $m++)
{
  for($l = 1; $l < 9; $l += 3)
  {
    for($k = 1; $k < 9; $k += 3)
    {
      for($j = 0; $j < 9; $j++)
      {
        for($i = $j; $i < 9; $i++)
        {
          $linp = $l + int($i/3) -1;
          $colp = $k + ($i%3 - 1);
          $line = $l + int($j/3) -1;
          $cole = $k + ($j%3 - 1);
          print "-$matriz[$line][$cole][$m] -$matriz[$linp][$colp][$m] 0\n" unless ($linp == $line and $colp == $cole);
        }
      }
    }
  }
}
